{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-box">
        <h1>Welcome back</h1>
        <p class="subtitle">Sign in to continue to Demandify</p>

        <div class="oauth-buttons">
            <a href="{{ path('app_oauth_start', { 'type': 'slack' }) }}" class="oauth-button slack">
                <i class="fab fa-slack"></i>
                <span>Continue with Slack</span>
            </a>
            <a href="{{ path('app_oauth_start', { 'type': 'google' }) }}" class="oauth-button google">
                <i class="fab fa-google"></i>
                <span>Continue with Google</span>
            </a>
        </div>

        <div class="login-footer">
            <p>Don't have an account? Your Slack or Google account will be automatically connected.</p>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: calc(100vh - var(--nav-height) - 4rem);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .login-box {
        background: rgba(32, 32, 32, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 2.5rem;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }

    h1 {
        margin: 0;
        font-size: 1.75rem;
        font-weight: 600;
        color: #fff;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.7);
        margin-top: 0.5rem;
        margin-bottom: 2rem;
        font-size: 0.95rem;
    }

    .oauth-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .oauth-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 0.75rem;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .oauth-button.slack {
        background: #4A154B;
        color: white;
    }

    .oauth-button.google {
        background: white;
        color: #444;
    }

    .oauth-button:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        text-decoration: none;
        color: inherit;
    }

    .oauth-button.slack:hover {
        color: white;
    }

    .oauth-button.google:hover {
        color: #444;
    }

    .login-footer {
        margin-top: 2rem;
        text-align: center;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .login-footer p {
        margin: 0;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .login-container {
            padding: 1rem;
        }

        .login-box {
            padding: 2rem;
        }
    }
</style>
{% endblock %}
